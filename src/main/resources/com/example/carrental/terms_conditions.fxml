<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@dashboard.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.TermsConditionsController">

    <VBox alignment="CENTER"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <!-- Glass Card -->
        <VBox spacing="25"
              alignment="CENTER"
              maxWidth="900"
              styleClass="glass-card">

            <!-- Title -->
            <Label fx:id="termsTitleLabel"
                   styleClass="terms-title"/>

            <!-- Scrollable Content -->
            <ScrollPane fitToWidth="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        styleClass="terms-scroll">

                <Label fx:id="termsContentLabel"
                       wrapText="true"
                       styleClass="terms-content"/>
            </ScrollPane>

            <!-- Back Button -->
            <Button fx:id="backButton"
                    text="BACK TO DASHBOARD"
                    onAction="#handleBack"
                    styleClass="dashboard-btn customer-btn"/>
        </VBox>
    </VBox>
</AnchorPane>
