<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="com.example.carrental.forget_passwordController"
      xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="15"
      style="-fx-background-image: url('file:///C:/CarRentalImages/forget.jpg'); -fx-background-size: cover;">

    <padding>
        <Insets top="200" right="400" bottom="200" left="400"/>
    </padding>

    <VBox style="-fx-background-color: white; -fx-opacity: 0.9;" spacing="10" prefWidth="500" prefHeight="420">
        <Label text="FORGOT PASSWORD">
            <font>
                <Font name="Arial Bold" size="20"/>
            </font>
        </Label>

        <Label text="Name:"/>
        <TextField fx:id="nameField"/>

        <Label text="Email:"/>
        <TextField fx:id="emailField"/>

        <Label text="Phone Number:"/>
        <TextField fx:id="phoneField"/>

        <Label text="New Password:"/>
        <PasswordField fx:id="newPasswordField"/>

        <Label text="Confirm Password:"/>
        <PasswordField fx:id="confirmPasswordField"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Submit" onAction="#handleSubmit"/>
            <Button text="Cancel" onAction="#handleCancel"/>
            <Button text="Back to Login" onAction="#handleBack"/>
        </HBox>
    </VBox>
</VBox>