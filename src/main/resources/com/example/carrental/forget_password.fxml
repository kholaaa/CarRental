<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane"
            prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.forget_passwordController">


    <!-- Background will be set in controller -->

    <VBox alignment="CENTER" spacing="25" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0">

        <padding>
            <Insets top="40" right="80" bottom="40" left="80" />
        </padding>

        <Label text="Reset Your Password"
               style="-fx-font-size: 42px; -fx-text-fill: white; -fx-font-weight: bold;" />

        <VBox spacing="12" alignment="CENTER" style="-fx-max-width: 420;">
            <Label text="Username" style="-fx-text-fill: white; -fx-font-size: 16px;"
                   alignment="CENTER_LEFT" />
            <TextField fx:id="usernameField" promptText="Enter your username"
                       prefHeight="48" styleClass="input-field" />

            <Label text="New Password" style="-fx-text-fill: white; -fx-font-size: 16px;"
                   alignment="CENTER_LEFT" />
            <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                           prefHeight="48" styleClass="input-field" />
        </VBox>

        <HBox spacing="30" alignment="CENTER">
            <Button text="Reset Password" onAction="#handleResetPassword"
                    prefWidth="220" prefHeight="55" styleClass="btn-primary" />

            <Button text="Back to Login" onAction="#handleBack"
                    prefWidth="180" prefHeight="55" styleClass="btn-secondary" />
        </HBox>

    </VBox>

</AnchorPane>