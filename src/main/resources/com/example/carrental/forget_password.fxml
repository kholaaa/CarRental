<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane"
            prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.forget_passwordController">

    <!-- Background will be set in controller -->

    <VBox alignment="CENTER" spacing="25" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0">

        <padding>
            <Insets top="40" right="80" bottom="40" left="80" />
        </padding>

        <Label text="Reset Your Password"
               style="-fx-font-size: 42px; -fx-text-fill: white; -fx-font-weight: bold;" />

        <!-- Glass transparent VBox -->
        <VBox spacing="20" alignment="CENTER" prefWidth="440"
              style="
                  -fx-background-color: rgba(255,255,255,0.12);
                  -fx-background-radius: 25;
                  -fx-border-radius: 25;
                  -fx-border-color: rgba(255,255,255,0.35);
                  -fx-border-width: 1.2;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 30, 0.3, 0, 10);
              ">

            <padding>
                <Insets top="35" right="35" bottom="35" left="35"/>
            </padding>

            <Label text="Username" style="-fx-text-fill: white; -fx-font-size: 16px;"
                   alignment="CENTER_LEFT" />
            <TextField fx:id="usernameField" promptText="Enter your username"
                       prefHeight="48"
                       style="-fx-background-color: rgba(255,255,255,0.18);
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: rgba(255,255,255,0.6);
                              -fx-background-radius: 12;" />

            <Label text="New Password" style="-fx-text-fill: white; -fx-font-size: 16px;"
                   alignment="CENTER_LEFT" />
            <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                           prefHeight="48"
                           style="-fx-background-color: rgba(255,255,255,0.18);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.6);
                                  -fx-background-radius: 12;" />

            <HBox spacing="30" alignment="CENTER">
                <Button text="Reset Password" onAction="#handleResetPassword"
                        prefWidth="220" prefHeight="55"
                        style="-fx-background-color: #4CAF50;  /* Green */
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 14;" />

                <Button text="Back to Login" onAction="#handleBack"
                        prefWidth="180" prefHeight="55"
                        style="-fx-background-color: #f44336;  /* Red */
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 14;" />
            </HBox>

        </VBox>

    </VBox>

</AnchorPane>
