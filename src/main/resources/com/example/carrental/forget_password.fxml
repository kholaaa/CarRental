<?import javafx.geometry.Insets?>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrental.forget_passwordController">
    <children>
        <VBox alignment="CENTER" spacing="25.0">
            <padding><Insets top="100.0" /></padding>
            <Label text="Reset Password" style="-fx-font-size: 32px; -fx-text-fill: white;" />
            <TextField fx:id="usernameField" promptText="Username" prefWidth="300.0" />
            <PasswordField fx:id="newPasswordField" promptText="New Password" prefWidth="300.0" />
            <Button text="RESET PASSWORD" onAction="#handleResetPassword" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-font-size: 16px;" prefWidth="300.0" />
        </VBox>
    </children>
</AnchorPane>