<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.add_carController">

    <children>

        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: rgba(30,30,50,0.75); -fx-background-radius: 15; -fx-padding: 40;"
              prefWidth="600.0" prefHeight="580.0"
              AnchorPane.topAnchor="70.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">

            <Label text="Add New Car"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>


            <TextField fx:id="carIdField" promptText="Car ID (unique number)" prefHeight="50.0" style="-fx-font-size: 16px;"/>
            <TextField fx:id="modelField" promptText="Model (e.g. Corolla)" prefHeight="50.0" style="-fx-font-size: 16px;"/>
            <TextField fx:id="typeField" promptText="Type (e.g. Sedan, SUV)" prefHeight="50.0" style="-fx-font-size: 16px;"/>
            <TextField fx:id="colourField" promptText="Colour (e.g. Black, Silver)" prefHeight="50.0" style="-fx-font-size: 16px;"/>
            <TextField fx:id="priceField" promptText="Price per Day (PKR)" prefHeight="50.0" style="-fx-font-size: 16px;"/>


            <HBox alignment="CENTER" spacing="40.0" prefHeight="80.0">
                <Button text="ADD CAR"
                        onAction="#handleAddCar"
                        prefHeight="60.0" prefWidth="220.0"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

                <Button text="BACK TO DASHBOARD"
                        onAction="#handleBack"
                        prefHeight="60.0" prefWidth="260.0"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>