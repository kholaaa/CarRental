<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane"
            prefHeight="720.0"
            prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.MyBookingsController"
            style="-fx-background-image: url('/pics/llg.png');
                   -fx-background-size: cover;
                   -fx-background-position: center center;
                   -fx-background-repeat: no-repeat;">

    <children>
        <VBox spacing="30.0" alignment="CENTER"
              AnchorPane.topAnchor="40.0"
              AnchorPane.bottomAnchor="40.0"
              AnchorPane.leftAnchor="80.0"
              AnchorPane.rightAnchor="80.0">

            <Label text="My Bookings And Returns"
                   style="-fx-font-size: 36px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;"/>

            <TableView fx:id="bookingsTable" prefHeight="500.0">
                <columns>
                    <TableColumn fx:id="carIdCol" text="Car ID" prefWidth="100.0"/>
                    <TableColumn fx:id="modelCol" text="Model" prefWidth="220.0"/>
                    <TableColumn fx:id="fromCol" text="From Date" prefWidth="150.0"/>
                    <TableColumn fx:id="toCol" text="To Date" prefWidth="150.0"/>
                    <TableColumn fx:id="costCol" text="Total Cost" prefWidth="140.0"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="120.0"/>
                    <TableColumn fx:id="returnFuelCol" text="Return Fuel %" prefWidth="130.0"/>
                    <TableColumn fx:id="returnConditionCol" text="Return Condition" prefWidth="220.0"/>
                </columns>
            </TableView>

            <Button text="BACK TO DASHBOARD"
                    onAction="#handleBack"
                    prefHeight="55.0"
                    prefWidth="300.0"
                    style="-fx-background-color: #d32f2f;
                           -fx-text-fill: white;
                           -fx-font-size: 18px;
                           -fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>