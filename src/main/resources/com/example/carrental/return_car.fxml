<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane"
            prefHeight="720.0"
            prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.return_carController">

    <VBox alignment="CENTER" spacing="25"
          AnchorPane.topAnchor="80.0"
          AnchorPane.bottomAnchor="80.0"
          AnchorPane.leftAnchor="200.0"
          AnchorPane.rightAnchor="200.0">

        <Label text="Return a Car"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <VBox spacing="15">
            <Label text="Car ID" style="-fx-text-fill: white;"/>
            <TextField fx:id="carIdField" promptText="Enter Car ID"/>

            <Label text="Fuel Level at Return (%)" style="-fx-text-fill: white;"/>
            <TextField fx:id="fuelLevelField" promptText="0 - 100"/>

            <Label text="Car Condition" style="-fx-text-fill: white;"/>
            <TextArea fx:id="conditionField"
                      promptText="Describe condition / damages..."
                      prefHeight="120"/>
        </VBox>

        <HBox spacing="40" alignment="CENTER">
            <Button text="Submit Return"
                    onAction="#handleReturnCar"
                    prefWidth="180"
                    prefHeight="50"/>

            <Button text="Back"
                    onAction="#handleBack"
                    prefWidth="120"
                    prefHeight="50"/>
        </HBox>
    </VBox>
</AnchorPane>
