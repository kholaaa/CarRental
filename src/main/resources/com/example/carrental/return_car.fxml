<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" stylesheets="@return_car.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrental.return_carController">

    <VBox alignment="CENTER" layoutX="14.0" layoutY="-40.0" prefHeight="761.0" prefWidth="1279.0" spacing="40.0" AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="-13.0" AnchorPane.topAnchor="-40.0">

        <!-- Title -->
        <Label styleClass="title-label" text="Return Vehicle" />

        <!-- Glassmorphic Form Card -->
        <VBox alignment="CENTER" maxWidth="640.0" prefHeight="417.0" prefWidth="640.0" spacing="28.0" styleClass="glass-card">

            <padding>
                <Insets bottom="50.0" left="55.0" right="55.0" top="50.0" />
            </padding>

            <!-- Car ID -->
            <Label styleClass="field-label" text="Car ID *" />
            <TextField fx:id="carIdField" promptText="Enter Car ID (e.g. CAR-001)" styleClass="glass-text-field" />

            <!-- Fuel Level -->
            <Label styleClass="field-label" text="Fuel Level at Return (%) *" />
            <TextField fx:id="fuelLevelField" promptText="0 â€“ 100" styleClass="glass-text-field" />

            <!-- Condition Description -->
            <Label styleClass="field-label" text="Vehicle Condition / Damages" />
            <TextArea fx:id="conditionField" prefHeight="160.0" prefWidth="528.0" promptText="Describe any damages, scratches, interior condition, etc..." styleClass="glass-text-area bold-text" wrapText="true" />

        </VBox>

        <!-- Action Buttons -->

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="40.0">
            <Button onAction="#handleReturnCar" prefHeight="35.0" prefWidth="240.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" styleClass="btn btn-submit" text="SUBMIT RETURN" />
   
                  <Button onAction="#handleBack" prefHeight="35.0" prefWidth="240.0" style="-fx-background-color: #c0392b; -fx-text-fill: white;" styleClass="btn btn-back" text="BACK TO DASHBOARD" />
        </HBox>

    </VBox>



</AnchorPane>
