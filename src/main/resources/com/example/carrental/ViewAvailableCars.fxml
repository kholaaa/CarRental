<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane"
            prefHeight="720.0"
            prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.ViewAvailableCarsController"
            stylesheets="@tables.css"> <!-- separate CSS for table -->

    <children>

        <VBox alignment="CENTER"
              spacing="40.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">


            <Label text="Add New Car"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Cars Table -->
            <TableView fx:id="carsTable"
                       prefHeight="450.0"
                       prefWidth="500.0"
                       styleClass="beautiful-table">
                <columns>
                    <TableColumn fx:id="idCol"     prefWidth="120.0" text="Car ID" />
                    <TableColumn fx:id="modelCol"  prefWidth="250.0" text="Model" />
                    <TableColumn fx:id="typeCol"   prefWidth="220.0" text="Brand" />
                    <TableColumn fx:id="priceCol"  prefWidth="180.0" text="Price/Day" />
                    <TableColumn fx:id="statusCol" prefWidth="150.0" text="Status"/>
                </columns>
            </TableView>

            <!-- Back Button -->
            <Button text="BACK TO DASHBOARD"
                    onAction="#handleBack"
                    prefHeight="55.0"
                    prefWidth="300.0"
                    styleClass="action-btn"/>
        </VBox>

    </children>
</AnchorPane>
