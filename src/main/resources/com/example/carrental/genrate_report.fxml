<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.generate_reportController">

    <children>
        <VBox alignment="CENTER" spacing="30.0"
              AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">

            <Label text="Rental Report"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <TableView fx:id="reportTable" prefHeight="450.0" prefWidth="900.0">
                <columns>
                    <TableColumn fx:id="customerCol" text="Customer ID" prefWidth="120.0"/>
                    <TableColumn fx:id="carCol" text="Car ID" prefWidth="120.0"/>
                    <TableColumn fx:id="daysCol" text="Rental Days" prefWidth="150.0"/>
                    <TableColumn fx:id="costCol" text="Total Cost (PKR)" prefWidth="180.0"/>
                </columns>
            </TableView>

            <Button text="BACK TO DASHBOARD"
                    onAction="#handleBack"
                    prefHeight="55.0" prefWidth="250.0"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>