<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.SignUpController">

    <children>
        <!-- Centered Sign Up Card -->
        <VBox alignment="CENTER" layoutX="277.0" layoutY="120.0" prefHeight="550.0" prefWidth="432.0" spacing="25.0"
              style="-fx-background-color: rgba(30,30,30,0.88); -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #444444; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 25, 0, 0, 8);">

            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>

            <!-- Title -->
            <Label style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;" text="Create New Account" />

            <!-- Username -->
            <TextField fx:id="usernameField" prefHeight="50.0" prefWidth="320.0" promptText="Username"
                       style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

            <!-- Name -->
            <TextField fx:id="nameField" prefHeight="50.0" prefWidth="320.0" promptText="Full Name"
                       style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

            <!-- Email -->
            <TextField fx:id="emailField" prefHeight="50.0" prefWidth="320.0" promptText="Email"
                       style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

            <!-- Password -->
            <PasswordField fx:id="passwordField" prefHeight="50.0" prefWidth="320.0" promptText="Password"
                           style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

            <!-- Phone (optional) -->
            <TextField fx:id="phoneField" prefHeight="50.0" prefWidth="320.0" promptText="Phone Number (optional)"
                       style="-fx-background-color: #3c3c3c; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

            <!-- Sign Up Button -->
            <Button onAction="#handleSignUp" prefHeight="55.0" prefWidth="320.0"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
                    text="SIGN UP" />

            <!-- Back to Login Button -->
            <Button fx:id="backToLoginButton" text="BACK TO LOGIN"
                    onAction="#handleBackToLogin" prefHeight="50.0" prefWidth="320.0"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
        </VBox>
    </children>
</AnchorPane>