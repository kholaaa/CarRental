<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane"
            prefHeight="720"
            prefWidth="1280"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.SignUpController">

    <children>

        <VBox alignment="CENTER"
              layoutX="420"
              layoutY="110"
              prefHeight="550"
              prefWidth="440"
              spacing="25"
              style="
          -fx-background-color: rgba(255, 255, 255, 0.12);
          -fx-background-radius: 25;
          -fx-border-radius: 25;
          -fx-border-color: rgba(255, 255, 255, 0.35);
          -fx-border-width: 1.2;
          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 30, 0.3, 0, 10);
      ">

            <padding>
                <Insets top="45" right="45" bottom="45" left="45"/>
            </padding>


            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <Label text="Create New Account"
                   style="-fx-font-size: 32px;
                          -fx-text-fill: white;
                          -fx-font-weight: bold;" />

            <TextField fx:id="usernameField" promptText="Username" prefHeight="50"
                       style="-fx-background-color: #3c3c3c;
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: #aaa;" />

            <TextField fx:id="nameField" promptText="Full Name" prefHeight="50"
                       style="-fx-background-color: #3c3c3c;
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: #aaa;" />

            <TextField fx:id="emailField" promptText="Email" prefHeight="50"
                       style="-fx-background-color: #3c3c3c;
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: #aaa;" />

            <PasswordField fx:id="passwordField" promptText="Password" prefHeight="50"
                           style="-fx-background-color: #3c3c3c;
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: #aaa;" />

            <TextField fx:id="phoneField" promptText="Phone Number (optional)" prefHeight="50"
                       style="-fx-background-color: #3c3c3c;
                              -fx-text-fill: white;
                              -fx-prompt-text-fill: #aaa;" />

            <Button text="SIGN UP"
                    prefHeight="55"
                    prefWidth="320"
                    onAction="#handleSignUp"
                    style="-fx-background-color: #4CAF50;
                           -fx-text-fill: white;
                           -fx-font-size: 18px;
                           -fx-font-weight: bold;" />

            <Button fx:id="backToLoginButton"
                    text="BACK TO LOGIN"
                    prefHeight="50"
                    prefWidth="320"
                    onAction="#handleBackToLogin"
                    style="-fx-background-color: #d32f2f;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;" />
        </VBox>

    </children>
</AnchorPane>
