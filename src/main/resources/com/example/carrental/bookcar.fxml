<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.bookcarController">

    <children>

        <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: rgba(30,30,50,0.75); -fx-background-radius: 20; -fx-padding: 50;"
              prefWidth="650.0" prefHeight="620.0"
              AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
              AnchorPane.leftAnchor="175.0" AnchorPane.rightAnchor="175.0">


            <Label text="Book a Car"
                   style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>


            <TextField fx:id="carIdField"
                       promptText="Enter Car ID"
                       prefHeight="55.0" prefWidth="500.0"
                       style="-fx-font-size: 18px;"/>


            <HBox spacing="30.0" alignment="CENTER">
                <VBox spacing="8.0">
                    <Label text="Start Date" style="-fx-font-size: 16px; -fx-text-fill: #cccccc;"/>
                    <DatePicker fx:id="entryDatePicker" prefWidth="230.0" style="-fx-font-size: 16px;"/>
                </VBox>

                <VBox spacing="8.0">
                    <Label text="Return Date" style="-fx-font-size: 16px; -fx-text-fill: #cccccc;"/>
                    <DatePicker fx:id="returnDatePicker" prefWidth="230.0" style="-fx-font-size: 16px;"/>
                </VBox>
            </HBox>


            <HBox alignment="CENTER" spacing="50.0" prefHeight="80.0">
                <Button text="BOOK NOW"
                        onAction="#handleBookCar"
                        prefHeight="65.0" prefWidth="240.0"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 12;"/>

                <Button text="BACK TO DASHBOARD"
                        onAction="#handleBack"
                        prefHeight="65.0" prefWidth="280.0"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 12;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>