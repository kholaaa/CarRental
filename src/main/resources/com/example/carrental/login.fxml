<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.LoginController"
            prefWidth="1920" prefHeight="1080">

    <!-- Background Image -->
    <ImageView fx:id="backgroundImage"
               fitWidth="1920"
               fitHeight="1080"
               preserveRatio="false"
               smooth="true"
               AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"/>

    <!-- Login Panel (centered better) -->
    <Pane fx:id="loginPane"
          prefWidth="400"
          prefHeight="340"
          layoutX="760"
          layoutY="370"
          style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);">

        <!-- All your labels, fields, checkbox, buttons remain exactly the same -->

    </Pane>
</AnchorPane>