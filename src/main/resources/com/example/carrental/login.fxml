<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrental.loginController">

    <children>
        <VBox alignment="CENTER" spacing="30.0" prefWidth="450.0"
              AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0"
              AnchorPane.leftAnchor="175.0" AnchorPane.rightAnchor="175.0"
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 15; -fx-padding: 50;">

            <Label text="Login" style="-fx-font-size: 32px; -fx-text-fill: white;"/>

            <TextField fx:id="usernameField" promptText="Username" prefHeight="45.0"/>

            <PasswordField fx:id="passwordField" promptText="Password" prefHeight="45.0"/>

            <Button text="LOGIN" onAction="#handleLogin"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
                    prefHeight="50.0" prefWidth="200.0"/>

            <!-- Sign Up & Forgot links -->
            <HBox alignment="CENTER" spacing="20.0">
                <Label style="-fx-text-fill: #bbbbbb;" text="New here?" />
                <Hyperlink onAction="#handleSignUp" text="Sign Up" />
            </HBox>
            <Hyperlink onAction="#handleForgotPassword" style="-fx-text-fill: #bbbbbb;" text="Forgot Password?" />
        </VBox>
    </children>
</AnchorPane>
