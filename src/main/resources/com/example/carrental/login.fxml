<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.loginController">

    <!-- Background Image via FXML -->
    <children>
        <ImageView fitWidth="1280.0" fitHeight="720.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@pics/llg.png"/>

            </image>
        </ImageView>

        <!-- Glassmorphic Login Panel -->
        <VBox alignment="CENTER" spacing="25.0" prefWidth="400.0"
              AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0"
              AnchorPane.leftAnchor="440.0" AnchorPane.rightAnchor="440.0"
              style="-fx-background-color: rgba(255,255,255,0.25);
                     -fx-background-radius: 20;
                     -fx-padding: 40;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 10);">

            <!-- Page Title -->
            <Label text="Login" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Username Field -->
            <TextField fx:id="usernameField" promptText="Username"
                       prefHeight="45.0" style="-fx-background-radius: 10; -fx-padding: 0 10 0 10;"/>

            <!-- Password Field -->
            <PasswordField fx:id="passwordField" promptText="Password"
                           prefHeight="45.0" style="-fx-background-radius: 10; -fx-padding: 0 10 0 10;"/>

            <!-- Login Button -->
            <Button text="LOGIN" onAction="#handleLogin"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;
                           -fx-background-radius: 10;"
                    prefHeight="50.0" prefWidth="200.0"/>

            <!-- Sign Up & Forgot Password -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="New here?" style="-fx-text-fill:blue;"/>
                <Hyperlink text="Sign Up" onAction="#handleSignUp" style="-fx-text-fill: #ffffff;"/>
            </HBox>

            <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"/>
        </VBox>
    </children>
</AnchorPane>
