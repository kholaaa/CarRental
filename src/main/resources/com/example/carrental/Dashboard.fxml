<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrental.DashboardController"
            prefWidth="1200" prefHeight="700">

    <!-- Background ImageView - EMPTY (image will be loaded in controller) -->
    <ImageView fx:id="backgroundImage"
               fitWidth="1200" fitHeight="700"
               preserveRatio="false"
               pickOnBounds="true"
               AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"/>

    <!-- Rental Rules -->
    <VBox layoutX="50" layoutY="100" spacing="20">
        <padding>
            <Insets top="20" left="20"/>
        </padding>
        <Label text="Rental Rules"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 10, 0, 2, 2);"/>
        <Label text="1. Customer must provide valid ID."
               style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <Label text="2. All dues must be cleared before return."
               style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <Label text="3. Late return will incur additional fees."
               style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <Label text="4. Fuel must be refilled to at least 50%."
               style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    </VBox>

    <!-- Navigation Buttons -->
    <VBox layoutX="850" layoutY="100" spacing="25" alignment="CENTER_RIGHT">
        <Button fx:id="addCarButton" text="Add Car"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button fx:id="viewCarButton" text="VIEW AVAILABLE CARS"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button fx:id="customerButton" text="CUSTOMER DETAILS"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button fx:id="bookCarButton" text="BOOK A CAR"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button fx:id="returnCarButton" text="RETURN A CAR"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button fx:id="reportButton" text="GENERATE REPORT"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button fx:id="logoutButton" text="Logout"
                prefWidth="250" prefHeight="60"
                style="-fx-font-size: 16px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8;"/>
    </VBox>

</AnchorPane>